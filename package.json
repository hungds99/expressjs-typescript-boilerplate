{
  "name": "expressjs-typescript-boilerplate",
  "version": "1.0.0",
  "description": "A starter boilerplate with express.js and typescript",
  "main": "index.js",
  "scripts": {
    "prepare": "husky",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hungds99/expressjs-typescript-boilerplate.git"
  },
  "keywords": [
    "expressjs",
    "typescript",
    "boilerplate"
  ],
  "author": "Hung Dinh S.",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/hungds99/expressjs-typescript-boilerplate/issues"
  },
  "homepage": "https://github.com/hungds99/expressjs-typescript-boilerplate#readme",
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/pg": "^8.11.10",
    "drizzle-kit": "^0.25.0",
    "eslint": "^9.12.0",
    "globals": "^15.11.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "3.3.3",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.19.1",
    "typescript-eslint": "^8.8.1"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.34.1",
    "express": "^4.21.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.13.0"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  }
}
