{
  "compilerOptions": {
    "target": "ES2020", // Set target ECMAScript version
    "module": "commonjs", // CommonJS for Node.js compatibility
    "moduleResolution": "node", // Use Node.js module resolution strategy
    "outDir": "./dist", // Output directory for compiled files
    "esModuleInterop": true, // Allow default imports from modules with no default export
    "skipLibCheck": true, // Skip checking of declaration files
    "strict": true, // Enable strict type checking
    "forceConsistentCasingInFileNames": true, // Ensure file name casing consistency
    "resolveJsonModule": true // Allow importing of JSON files
  },
  "include": ["src/**/*"], // Include all .ts files in the src folder
  "exclude": ["node_modules", "dist"] // Exclude node_modules and the output directory
}
